{
	"compilerOptions": {
		"lib": ["es5", "es6", "dom"],
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./build",
		"rootDir": "./src",
		"declaration": true,
		"strict": true,
		"sourceMap": true,
		"baseUrl": "./src",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictPropertyInitialization": false
	}
}
